<ul class="main-grid">
  <% photos.each do |photo| %>
     <li class="col">
    <div class="col_element">
      <div class="col_image">
      <%= link_to (image_tag photo.image.url(:preview), :alt => photo.description), gallery_photo_path(photo.gallery_id, photo) %>
    </div>
      <div class="caption">
        <%= content_tag :h5, photo.description %>
        <%= content_tag :p, "#{photo.city} - #{photo.country}" %>
        <p><%= link_to 'Open', gallery_photo_path(photo.gallery_id, photo), :class => "btn btn-danger" %></p>
      </div>
    </div>
    </li>
  <% end %>
</ul>
<%= paginate photos, :theme => 'application' %>
