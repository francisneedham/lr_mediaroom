<div class="container">
  <div class="page-header">
    <%= content_tag :h2, @gallery.title %>
    <%= content_tag :h1, @photo.description %>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= image_tag @photo.image.url(:big) %>
    </div>
  </div>
  <%= content_tag :p, "Scattata a: #{@photo.city} (#{@photo.country})" %>
  <%= content_tag :p, link_to('Scarica versione originale', download_gallery_photo_path(@gallery, @photo.id), :class => 'btn btn-primary btn-large', :target => '_blank') %>
</div>
