<div class="container">
  <div class="hero-unit">
    <%= content_tag :p, @gallery.gallery_date %>
    <%= content_tag :h1, @gallery.title %>
    <%= content_tag :p, @gallery.description %>
  </div>
  <ul class="thumbnails">
    <% @gallery.photos.each do |photo| %>
      <li class="span3">
      <div class="thumbnail">
        <%= image_tag photo.image.url(:preview), :alt => photo.description %>
        <div class="caption">
          <%= content_tag :h5, photo.description %>
          <%= content_tag :p, "#{photo.city} - #{photo.country}" %>
          <p><%= link_to 'Visualizza', gallery_photo_path(@gallery, photo), :class => "btn btn-primary" %></p>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
</div>
