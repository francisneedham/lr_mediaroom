<div class="page-header">
  <h1>Videos</h1>
</div>
<ul class="main-grid">
  <% @videos.each do |video| %>
    <li class="col">
    <div class="col_element">
      <div class="img_cont">
      <%= image_tag video.cover.url, :alt => video.description %>
    </div>
      <div class="caption">
        <%= content_tag :h5, video.description %>
        <%= content_tag :p, "#{video.city} - #{video.country}" %>
        <% 2.times do |i|%>
          <p><%= link_to video.send("attachment_#{i+1}_label"), ("/videos/" + video.send("attachment_#{i+1}")), :class => "btn btn-danger" if video.send("attachment_#{i+1}").present? %></p>
        <% end %>
      </div>
    </div>
    </li>
  <% end %>
</ul>

<%= paginate @videos, :theme => 'application' %>
